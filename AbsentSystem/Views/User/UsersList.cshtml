@model IEnumerable<AbsentSystem.Models.UserViewModel.UserListVm>

@{
    ViewData["Title"] = "صفحه لیست کاربران";
    Layout = "~/Areas/Identity/Pages/Shared/_Layout.cshtml";
}

<h2>لیست کاربران</h2>
 <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" class="btn btn-info">افزودن کاربر جدید</a>
<div class="panel-body">
    <div class="table-responsive">
        <div class="form-inline" role="grid">
            <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example" aria-describedby="dataTables-example_info">
                <thead>
                    <tr>
                        <th>بیشتر</th>
                        <th>ادرس</th>
                        <th>رمز عبور</th>
                        <th>شماره ملی</th>
                        <th>شماره پرسنلی</th>
                        <th> شماره تلفن</th>
                        <th>نام کارمند </th>
                        <th>ردیف </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td><a class="btn btn-link" asp-controller="User" asp-action="Index" asp-route-Id="@item.Id">لیست مرخصی ها</a></td>
                        <td>@item.Address</td>
                        <td>@item.ShowPass</td>
                        <td>@item.NationalCode</td>
                        <td>@item.PersonelId</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.DisplayName</td>
                        <td></td>
                    </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            $('table tr td:last-child').each(function (i) {
                $(this).text(i + 1);
            });
        });
    </script>
}
