@model AbsentSystem.Models.UserViewModel.UserEntranceVm
@{
    ViewData["title"] = "ثبت ساعت ورودی";
}

<form asp-controller="User" asp-action="EntranceForm" method="post">
    <div id="ShowError" class="text-danger" hidden></div>
    <div class="form-group">
        <label asp-for="PersonalId"></label>
        <input asp-for="PersonalId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="EntranceTime"></label>
        <input asp-for="EntranceTime" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="EntranceDate"></label>
        <input asp-for="EntranceDateAD" hidden />
        <input asp-for="EntranceDate" class="form-control" readonly />
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="ثبت" />
    </div>
</form>