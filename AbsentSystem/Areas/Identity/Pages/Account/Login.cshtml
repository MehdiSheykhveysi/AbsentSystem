@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}
<form method="post">
    <h4>ورود به حساب کاربری</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" class="form-control" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="checkbox">
            <label asp-for="Input.RememberMe">
                <input asp-for="Input.RememberMe" />
                @Html.DisplayNameFor(m => m.Input.RememberMe)
            </label>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">ورود</button>
    </div>
    <div class="form-group">
        <p>
            <a asp-page="./ForgotPassword" class="btn btn-link">رمز عبور خود را فراموش کردید؟</a>
        </p>
        <p>
            <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@ViewContext.HttpContext.Request.PathAndQuery()" class="btn btn-link">ثبت نام</a>
        </p>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
