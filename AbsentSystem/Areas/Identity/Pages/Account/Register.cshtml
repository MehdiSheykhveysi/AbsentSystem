@page
@model RegisterModel
@{
    ViewData["Title"] = "ثبت نام";
}
<form class="comment-form row" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <h4>ساخت حساب جدید</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Input.Email"></label>
        <input asp-for="Input.Email" type="email" class="form-control" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.UserName"></label>
        <input asp-for="Input.UserName" type="text" class="form-control" required />
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.NationalCode"></label>
        <input asp-for="Input.NationalCode" type="number" class="form-control" required />
        <span asp-validation-for="Input.NationalCode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.PhoneNumber"></label>
        <input asp-for="Input.PhoneNumber" type="tel" class="form-control" required />
        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password"></label>
        <input asp-for="Input.Password" type="text" class="form-control" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Address"></label>
        <textarea asp-for="Input.Address" class="form-control" required></textarea>
        <span asp-validation-for="Input.Address" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">ایجاد حساب</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
